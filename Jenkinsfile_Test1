pipeline {
    agent any
    environment {
        KATALON_PATH = "/var/jenkins_home/tools/katalon_engine/Katalon_Studio_Engine_MacOS_Arm64-10.4.0/Katalon Studio Engine.app"
        PROJECT_PATH = "${env.WORKSPACE}/demo_cicd_katalon.prj"
        TEST_SUITE = "Test Suites/TS_demo_01"
        REPORT_FOLDER = "${env.WORKSPACE}/Reports"
    }


    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/MaiDepzai/demo_cicd_katalon.git',
                    credentialsId: 'YOUR_GITHUB_CREDENTIALS_ID'
            }
        }
         stage('Run Katalon Tests') {
            steps {
                echo "Running Katalon Test Suite..."
                sh """
                    mkdir -p "${REPORT_FOLDER}"
                    "${KATALON_PATH}" -runMode=console -projectPath="${PROJECT_PATH}" -testSuitePath="${TEST_SUITE}" -browserType=Chrome -reportFolder="${REPORT_FOLDER}"
                """
            }
        }
        stage('Archive Reports') {
            steps {
                archiveArtifacts artifacts: "${REPORT_FOLDER}/**/*", allowEmptyArchive: true
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished'
        }
        failure {
            echo 'Katalon tests failed!'
        }
    }
}
